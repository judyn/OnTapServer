<div class="beer-image">
  <div class="margin-left">
    <h1 class="bar-title">Registered Accounts</h1>
  </div>

  <div class="margin-left">
    <div class="bars-columns">
        <% @bars.each do |bar| %>
          <%= link_to bar, class: "bar-list-container grey-text" do %>
          <div>
            <h2><%= bar.title %></h2>
              <p class="bar-tap-number"><%= Tap.where("bar_id = ? AND show_card = ?",bar.id,true).count %> Public Brew Cards<p>
              <p class="bar-tap-number"><%= Tap.where("bar_id = ? AND show_recipe = ? AND length(recipe) > ?",bar.id,true,0).count %> Public Recipes<p>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
    <%= paginate @bars %>
</div>
