<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email %>
    <%= f.input :password, label_html: { class: 'catpants' }, input_html: {class:'catpants-password'} %>
    <%= f.input :password_confirmation, label_html: { class: 'catpants' }, input_html: {class:'catpants-password'} %>
    <a href="https://rubygems.org/gems/catpants">Cat Pants Gem!</a>
    <br/>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
